{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "pretty": true,
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },

    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "src/types/*"]
}
